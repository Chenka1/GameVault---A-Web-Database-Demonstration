extends layout

block content
  h1 Update Publisher
  form(action="/publisher/update" method="POST" style="width: 300px; margin: 0 auto;")
    div(style="margin-bottom: 10px;")
      label(for="name") Name:
      input#name(type="text" name="pname" value=pub.name required style="width: 100%;")
    div(style="margin-bottom: 10px;")
      label(for="location") Location:
      input#location(type="text" name="ploc" value=pub.location required style="width: 100%;")
    input(type="hidden" name="pid" value=pub.publisher_id)
    button(type="submit" style="margin-top: 10px; padding: 10px 20px; background-color: blue; color: white; border: none; border-radius: 5px; cursor: pointer;") Update Publisher
