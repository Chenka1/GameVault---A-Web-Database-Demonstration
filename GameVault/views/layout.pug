doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
  body
    nav(class='navbar navbar-expand-sm bg-dark navbar-dark')
      div.container-fluid
        div(class='collapse navbar-collapse' id='collapsibleNavbar')
          ul(class='navbar-nav')
            li(class='nav-item')
              a(href='/' class='nav-link') Home
            li(class='nav-item dropdown')
              a(class='nav-link dropdown-toggle' href='#' role='button' data-bs-toggle='dropdown') Game
              ul(class='dropdown-menu')
                li
                  a(class='dropdown-item' href='/game/new') New Game
                li
                  a(class='dropdown-item' href='/game') List Game
            li(class='nav-item dropdown')
              a(class='nav-link dropdown-toggle' href='#' role='button' data-bs-toggle='dropdown') Publisher
              ul(class='dropdown-menu')
                li
                  a(class='dropdown-item' href='/publisher/new') New Publisher
                li
                  a(class='dropdown-item' href='/publisher') List Publisher
            li(class='nav-item dropdown')
              a(class='nav-link dropdown-toggle' href='#' role='button' data-bs-toggle='dropdown') Developer
              ul(class='dropdown-menu')
                li
                  a(class='dropdown-item' href='/developer/new') New Developer
                li
                  a(class='dropdown-item' href='/developer') List Developer
            li(class='nav-item dropdown')
              a(class='nav-link dropdown-toggle' href='#' role='button' data-bs-toggle='dropdown') Genre
              ul(class='dropdown-menu')
                li
                  a(class='dropdown-item' href='/genre/new') New Genre
                li
                  a(class='dropdown-item' href='/genre') List Genre
            li(class='nav-item')
              a(href='/auth/signup' class='nav-link') Signup
            li(class='nav-item')
              a(href='/auth/login' class='nav-link') Login
            li(class='nav-item')
              a(href='/logout' class='nav-link') Logout
        span(class='navbar-text')= User

    if message && msgType == "Warning"
      div(class='alert alert-warning alert-dismissible')
        button(type='button' class='btn-close' data-bs-dismiss='alert')
        strong Warning!
        | #{message}

    if message && msgType == "Success"
      div(class='alert alert-success alert-dismissible')
        button(type='button' class='btn-close' data-bs-dismiss='alert')
        strong Success!
        | #{message}

    div(class='container mt-5')
      block content

    div(class='mt-5 p-4 bg-dark text-white text-center')
      p &copy; 2024 - Chenkai Mu
